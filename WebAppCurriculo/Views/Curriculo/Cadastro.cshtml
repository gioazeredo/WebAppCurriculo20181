
@{
    ViewData["Title"] = "Index";
}

@model WebAppCurriculo.Models.Curriculo
<h2>Cadastro de Curriculo</h2>

<form action="/Curriculo/Cadastro" method="post">

    <div class="panel panel-primary">

        <div class="panel-heading">1) Informações Pessoais</div>
        <div class="panel-body">

            <div class="form-group">
                <label for="Nome">Nome:</label>
                <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" placeholder="Digite seu nome completo">
            </div>

            <div class="form-group">
                <label for="Email">Email:</label>
                <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" placeholder="Digite seu e-mail pessoal">
            </div>

            <div class="form-group">
                <label for="DataNascimento">Data de Nascimento:</label>
                <input type="text" class="form-control" id="DataNascimento" name="DataNascimento" value="@Model.DataNascimento" placeholder="Formato dd/mm/aaaa. Ex.: 20/06/1998.">
            </div>

            <div class="form-group">
                <label for="Altura">Altura:</label>
                <input type="text" class="form-control" id="Altura" name="Altura" value="@Model.Altura" placeholder="Ex.: 1.71">
            </div>

            <div class="form-group">
                <label for="Site">Site:</label>
                <input type="text" class="form-control" id="Site" name="Site" value="@Model.Site" placeholder="Ex.: http//www.seusite.com.br">
            </div>

            <div class="form-group">
                <label for="EstadoCivil">Estado Civil:</label>
                @*<select class="form-control" id="EstadoCivil" name="EstadoCivil">
                    <option value="">--Selecione</option>
                    <option value="1">Casado(a)</option>
                    <option value="2">Solteiro(a)</option>
                    <option value="3">Viuvo(a)</option>

                </select>*@

                <select 
                        asp-for="EstadoCivil" 
                        asp-items="Html.GetEnumSelectList<EstadoCivil>()">

                </select>

            </div>

            <div class="form-group">
                <label class="radio-inline">
                    Sexo:
                    </label>

                    @*<label class="radio-inline">

                        <input type="radio" name="Sexo" id="SexoFeminino" value="Feminino" />
                        Feminino
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="Sexo" id="SexoMasculino" value="Masculino" />
                        Masculino
                    </label>*@

                @foreach (var sexo in Enum.GetValues(typeof(Sexo)))
                {
                <label class="radio-inline">
                    <input type="radio" asp-for="Sexo" value="@sexo"/>

                    @sexo

                </label>

                }

            </div>

        </div>
    </div>

    <div class="panel panel-primary">

        <div class="panel-heading">2) Endereço</div>
        <div class="panel-body">

            <div class="form-group">
                <label for="CEP">CEP:</label>
                <input type="text" class="form-control" id="CEP" name="CEP" value="@Model.CEP" placeholder="CEP da rua de sua residencia">
            </div>
            
            <div class="form-group">
                <label for="Endereco">Endereço:</label>
                <input type="text" class="form-control" id="Endereco" name="Endereco" value="@Model.Endereco" placeholder="Bairro, número, rua, logadouro,etc... Ex.: Rua a, bairro b, próximo a c">
            </div>


        </div>
    </div>

    <div class="panel panel-primary">

        <div class="panel-heading">3) Contato</div>
        <div class="panel-body">

            <div class="form-group">
                <label for="TelefoneMovel">Celular:</label>
                <input type="text" class="form-control" id="TelefoneMovel" name="TelefoneMovel" value="@Model.TelefoneMovel" placeholder="Telefone móvel para contato direto">
            </div>

            <div class="form-group">
                <label for="TelefoneFixo">Telefone:</label>
                <input type="text" class="form-control" id="TelefoneFixo" name="TelefoneFixo" value="@Model.TelefoneFixo" placeholder="Telefone fixo para contato ou para recado">
            </div>


        </div>
    </div>

    <div class="panel panel-primary">

        <div class="panel-heading">4) Conhecimentos</div>
        <div class="panel-body">

            <div class="form-group"

            <div class="checkbox-inline">
                <label>
                    <input type="checkbox" value="true" name="HTML" id="HTML">HTML
                </label>



            <div class="checkbox-inline">
                <label>
                    <input type="checkbox" value="true" name="CSS" id="CSS">CSS
                </label>

                <div class="checkbox-inline">
                    <label>
                        <input type="checkbox" value="true" name="JavaScript" id="JavaScript">JavaScript
                    </label>

                </div>
            </div>
         </div>


            <div class="form-group"

                 <label for="MaisConhecimentos">Mais Conhecimentos:</label>
                 <textarea ="text" class="form-control" rows="10" id="MaisConhecimentos" name="MaisConhecimentos" placeholder="Descreva mais sobre seus conhecimentos na área">@Model.MaisConhecimentos</textarea>
            </div>


    <div class="text-right">
        <input id="btnCancelar" type "button" value="Cancelar" class="btn btn-danger"/>
        <input id="btnCadastro" type="submit" value="Salvar" class="btn btn-primary"/>

    </div>
            </div>

            
</form>